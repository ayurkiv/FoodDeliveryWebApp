@using FoodDelivery.ViewModels;
@model FoodDelivery.ViewModels.PaymentViewModel

@{
    ViewData["Title"] = "Pay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-4">Payment</h2>

<div class="container mt-4">
    <form method="post" asp-action="Pay" class="col-md-6 mx-auto" data-val="true" data-ajax="true">
        <input type="hidden" asp-for="OrderId" />

        <div class="form-group">
            <label asp-for="CardNumber">Card Number</label>
            <input type="text" asp-for="CardNumber" class="form-control" placeholder="Enter card number" />
            <span asp-validation-for="CardNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ExpirationDate">Expiration Date</label>
            <input type="text" asp-for="ExpirationDate" class="form-control" placeholder="MM/YY" />
            <span asp-validation-for="ExpirationDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CVV">CVV</label>
            <input type="text" asp-for="CVV" class="form-control" placeholder="Enter CVV" />
            <span asp-validation-for="CVV" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Pay</button>
    </form>
</div>

