@using FoodDelivery.ViewModels;
@model FoodDelivery.ViewModels.PaymentViewModel

@{
    ViewData["Title"] = "Pay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row d-flex justify-content-center">
    <div class="col-md-6 d-flex justify-content-center bg-form-reister-container">
        <div class="col-md-10">
            <form method="post" asp-action="Pay" data-val="true" data-ajax="true">
                <input type="hidden" asp-for="OrderId" />
                <h1 class="d-flex justify-content-center topic-register">Payment</h1>
                <h2 class="text-center topic-form">Enter your card details</h2>
                <div class="form-floating mb-3">
                    <input type="text" asp-for="CardNumber" class="form-control form-input" placeholder="Enter card number" />
                    <label asp-for="CardNumber">CardNumber</label>
                    <span asp-validation-for="CardNumber" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input type="text" asp-for="ExpirationDate" class="form-control form-input" placeholder="MM/YY" />
                    <label asp-for="ExpirationDate">ExpirationDate</label>
                    <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input type="text" asp-for="CVV" class="form-control form-input" placeholder="Enter CVV" />
                    <label asp-for="CVV">CVV</label>
                    <span asp-validation-for="CVV" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary cart-btn-sub btn-register font-popins fw-medium fs-5 mt-4">Pay</button>
            </form>
        </div>
    </div>
</div>

