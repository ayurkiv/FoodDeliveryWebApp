@using FoodDelivery.ViewModel
@model List<OrderViewModel>

<h1>Orders for Courier</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Delivery Status</th>
            <th>Payment Status</th>
            <th>Order Total</th>
            <th>Weight Total</th>
            <th>Order Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.DeliveryStatus</td>
                <td>@order.PaymentStatus</td>
                <td>@order.OrderTotal</td>
                <td>@order.WeightTotal</td>
                <td>@order.OrderDate</td>
                <td>
                    @* Додайте форму або кнопку для зміни статусу доставки *@
                </td>
            </tr>
        }
    </tbody>
</table>
